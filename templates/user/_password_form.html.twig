{{ form_start(formPassword) }}
<h4 class="title-option">
	<span>
		<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" class="mr-3"><path fill="white" d="M6 22q-.825 0-1.412-.587T4 20V10q0-.825.588-1.412T6 8h1V6q0-2.075 1.463-3.537T12 1q2.075 0 3.538 1.463T17 6v2h1q.825 0 1.413.588T20 10v10q0 .825-.587 1.413T18 22zm6-5q.825 0 1.413-.587T14 15q0-.825-.587-1.412T12 13q-.825 0-1.412.588T10 15q0 .825.588 1.413T12 17M9 8h6V6q0-1.25-.875-2.125T12 3q-1.25 0-2.125.875T9 6z"/></svg>
	</span>Modifier votre mot de passe</h4>

{% if denied %}
	<div class="bg-red-100">
		<p class="text-red-500  py-1 px-2">Votre ancien mot de passe ne correspond pas</p>
	</div>
{% endif %}
   {{ form_widget(formPassword.mdpActuel) }}
    
{% if error %}
	<div class="bg-red-100">
		<p class="text-red-500  py-1 px-2">Votre confirmation ne correspond pas a nouveau mot de passe</p>
	</div>
{% endif %}
{{ form_widget(formPassword.verifNewPass) }}
{{ form_widget(formPassword.confirmNewPass) }}

<button class="btnFormAccess">Modifier Mot de passe</button>
{{ form_end(formPassword) }}


