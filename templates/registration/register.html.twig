				<div>
					<h2 class="font-bold text-slate-700 text-xl">Tu as une salle ?</h2>
					<p>Inscris-toi et enregistre ta salle pour
						<strong>booker facilement les groupes !</strong>
					</p>
				</div>
			</div>
		</div>
		<div class="form-login">
			<div class="bg-white rounded-lg shadow-md p-5">
				<h1 class="font-bold text-slate-700 text-xl">Inscription</h1>

				{{ form_errors(registrationForm, {
       				    'attr': {
       				        'class': 'text-red-500'
       				    }
       				}) }}

				{{ form_start(registrationForm) }}
				<div class="text-start">
					{{ form_label(registrationForm.email) }}
					<div class="text-red-500">

						{{ form_errors(registrationForm.email) }}
					</div>
					{{ form_widget(registrationForm.email, {
       				    'attr': {
       				        'placeholder': 'Votre Email'
       				    }
       				}) }}


					{# <div class="error-form"> #}
					{{ form_label(registrationForm.plainPassword.first) }}
					<div class="text-red-500">
						{{ form_errors(registrationForm.plainPassword.first) }}
					</div>
					{{ form_widget(registrationForm.plainPassword.first,  {'id': 'passwordInput'}) }}
					<p class="text-center">
						<span id="lengthRequirement">8 caractères</span>
						|
						<span id="specialCharRequirement">
							1 caractère spécial</span>
						|
						<span id="uppercaseRequirement">
							1 majuscule</span>
					</p>
					<div class="password-strength-bar mb-5">
						<div class="progress-bar" id="progressBar">
							<div class="progress" id="progress"></div>
						</div>
					</div>


					{{ form_label(registrationForm.plainPassword.second) }}
					<div class="text-red-500">
						{{ form_errors(registrationForm.plainPassword.second) }}
					</div>
					{{ form_widget(registrationForm.plainPassword.second) }}


					<div class="flex">
						{{ form_row(registrationForm.agreeTerms) }}
						<p class="ml-2">J'accepte les
							<a href="{{ path('app_cgu') }}" class="text-blue-400 underline hover:text-blue-600 hover:no-underline">Conditions Générales D'utilisation</a>.
						</p>
					</div>

					<button class="rounded-lg p-2 bg-blue-700 w-full mt-3 text-white" id="inscriptionForm">{{ button_label|default('Inscription') }}</button>
					{{ form_end(registrationForm) }}

				</div>
				<hr class="border-1 my-3">
				<div class="w-full">
					<p class="mb-5">Déjà un compte ? <a href="{{ path('app_login') }}" class="text-blue-400 underline hover:text-blue-600 hover:no-underline">Connectez-vous</a></p>
				</div>
			</div>

		</div>
	</div>

{% endblock %}
