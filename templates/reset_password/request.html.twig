{% extends 'base.html.twig' %}

{% block title %}Réinitialiser mot de passe
{% endblock %}

{% block body %}
	<div class="user-container bg-slate-100 w-full min-h-screen">

		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<div class="w-full flex justify-center ">
			<div class="bg-white p-2 rounded md:w-1/2 m-2 ">
				<h4 class="title-option mt-0">
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 20 20" class="mr-2"><path fill="white" d="M12.5 2C9.424 2 7 4.424 7 7.5c0 .397.04.796.122 1.175c.058.27-.008.504-.142.638l-4.54 4.54A1.5 1.5 0 0 0 2 14.915V16.5A1.5 1.5 0 0 0 3.5 18h2A1.5 1.5 0 0 0 7 16.5V16h1a1 1 0 0 0 1-1v-1c0-.51.255-.962.646-1.233L8.439 11.56a1.5 1.5 0 0 1 0-2.122l2-2A1.5 1.5 0 0 1 12.915 9H14a5 5 0 0 1 3.29 1.236C17.744 9.434 18 8.5 18 7.5C18 4.424 15.576 2 12.5 2M14 5a1 1 0 1 1 0 2a1 1 0 0 1 0-2m-2.146 3.854a.5.5 0 0 0-.708-.708l-2 2a.5.5 0 0 0 0 .708l2 2a.5.5 0 0 0 .708-.708L10.707 11H14a3 3 0 1 1-3 3a.5.5 0 1 0-1 0a4 4 0 1 0 4-4h-3.293z"/></svg>
					Réinitialiser votre mot de passe</h4>

				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
				<div>
					<small>
						Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
					</small>
				</div>

				<button class="btnFormAccess">Envoyer l'e-mail</button>
				{{ form_end(requestForm) }}
				<a href="{{ path('app_login') }}" class="flex items-center hover:text-blue-500">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="mr-2"><g fill="#2e6372" ><path d="m11.948 14.829l-1.414 1.414L6.29 12l4.243-4.243l1.414 1.415L10.12 11h7.537v2H10.12z"/><path fill-rule="evenodd" d="M4.222 19.778c-4.296-4.296-4.296-11.26 0-15.556c4.296-4.296 11.26-4.296 15.556 0c4.296 4.296 4.296 11.26 0 15.556c-4.296 4.296-11.26 4.296-15.556 0m1.414-1.414A9 9 0 1 1 18.364 5.636A9 9 0 0 1 5.636 18.364" clip-rule="evenodd"/></g></svg>
                Retour à la page de connexion</a>
			</div>
		</div>
	</div>
{% endblock %}
