{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="form-login-container  bg-slate-100 w-full">
		<div class="intro-login">
			<h1>Symtour</h1>
			<h4>Tu as un groupe ou un projet musical ?</h4>
			<p>Inscrit toi et enregistre ton groupe pour organiser des dates
			</p>
			<br><br>
			<h4>Tu as une salle ?</h4>
			<p>Inscrit toi et enregistre ta salle pour booker facilement les groupes
			</p>
		</div>
		<div class="form-login bg-white rounded-lg shadow-md">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
				{# <label for="inputEmail">Email</label> #}
				<input
				type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control rounded-lg p-2 relative border-2 border-blue-400 w-full my-3" autocomplete="email" placeholder="Votre Email"  required autofocus> <br>
				{# <label for="inputPassword">Password</label> #}
				<input type="password" name="password" id="inputPassword" class="form-control rounded-lg p-2 relative border-2 border-blue-400 w-full my-3" autocomplete="current-password" placeholder="Mot de Passe" required> <br>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="rounded-lg p-2 bg-green-700 w-full mt-3 text-white" type="submit">
					Sign in
				</button>
			</form>
			<hr class="border-1 my-3">
			<div class="w-full">
			<p class="mb-5">Pas de compte ?</p>
			<a href="{{ path('app_user_new') }}" class="rounded-lg p-2 bg-blue-400 w-full text-white">Inscrivez-vous</a>
			</div>
		</div>
	</div>
{% endblock %}


