{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}


	<div class="user-dashboard  flex bg-sky-950 ">
		<div class="user-sidebar basis-1/4 bg-sky-950 p-5 h-screen text-white">
			<h4>Notifications</h4>
		</div>
		<div class="user-contain   basis-3/4 px-28 py-5 bg bg-slate-100">
			<div class="header-user flex justify-evenly">
				<div class="pic_profil">
					<img src="{{ profil.picture }}" alt="" class="user-img">
				</div>
				<div class="user-infos">
					<h3 class="font-bold ">{{ profil.pseudo }}</h3>
					<h3 class="mb-8">{{ profil.description }}</h3>
					<div class="nav-params-user">
						<ul class="flex">
							<li class="mx-5"><a href="/profil/{{ profil.id }}/edit">Mes infos</a></li>
							<li class="mx-5">Messagerie</li>
							<li class="mx-5">Notifications</li>
							<li class="mx-5">Paramètres</li>
						</ul>
						<hr>
					</div>
				</div>

			</div>
			<div class="tab_project">
				<h4>Mes salles</h4>
				<div class="bg-white rounded-lg shadow-md p-3">
				{% for hallMember in profil.hallMembers %}
                <div class="cardAdminProfil flex justify-between ">
					{# <p>{{ bandMember.band.logo}}</p> #}
					<img src="{{ hallMember.hall.logo}}" alt="" class=" w-5 rounded-s-full">
					<p>{{ hallMember.hall.name}}</p>
					{# <p>{{ hallMember.hall.musicCategory.category}}</p>
					<p>{{ hallMember.hall.defineStyle}}</p> #}
					<p>{{ hallMember.role.roleName}}</p>
					<a href="/hall/{{ hallMember.hall.id }}" class="btn-gerer">Gérer</a>
                </div>
                <hr class="my-3">
				{% endfor %}
                <a href="{{ path('app_hall_new') }}" class="text-slate-400 hover:text-blue-500 "> <button class="bg-slate-700 rounded-full px-2 pb-1 mr-4 text-white font-bold hover:bg-blue-500">+</button>Créer une nouvelle salle</a>
                </div>

				<h4>Mes Groupes</h4>
                <div class="bg-white rounded-lg shadow-md p-3">
				{% for bandMember in profil.bandMembers %}
                <div class="cardAdminProfil flex justify-between ">
					{# <p>{{ bandMember.band.logo}}</p> #}
					<img src="{{ bandMember.band.logo}}" alt="" class=" w-5 rounded-s-full">
					<p>{{ bandMember.band.name}}</p>
					<p>{{ bandMember.band.musicCategory.category}}</p>
					<p>{{ bandMember.band.defineStyle}}</p>
					<p>{{ bandMember.role.roleName}}</p>
					<a href="/band/{{ bandMember.band.id }}" class="btn-gerer">Gérer</a>
                </div>
                <hr class="my-3">
				{% endfor %}
                <a href="{{ path('app_band_new') }}" class="text-slate-400 hover:text-blue-500 "> <button class="bg-slate-700 rounded-full px-2 pb-1 mr-4 text-white font-bold hover:bg-blue-500">+</button>Créer un nouveau groupe</a>
                </div>
				
			</div>

		</div>
	</div>


{% endblock %}
